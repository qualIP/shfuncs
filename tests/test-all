set -euo pipefail

# shellcheck disable=all
SHFUNCS_DIR=$(cd "$(dirname "${BASH_SOURCE[0]:-${(%):-%x}}")/.." && pwd)
. "$SHFUNCS_DIR/func-test.sh"

# shellcheck disable=all
cd "$(dirname "${BASH_SOURCE[0]:-${(%):-%x}}")"

for test_file in ./test-* ; do
    case "$(basename "$test_file")" in
        test-all) continue ;;
        *.bak)    continue ;;
    esac
    $test_file
done
